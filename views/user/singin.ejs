<%- include('../includes/head.ejs') %>
    </head>

    <body class="auth">
        <% if(errorMessage && errorMessage.length> 0) { %>
            <div class="flash-message error" style="display: block">
                <%= errorMessage %>
                    <span class="close-button">&times;</span>
            </div>
            <% } %>
                    <% if(successMessage && successMessage.length> 0) { %>
			<div class="flash-message success" style="display: block">
				<%= successMessage %>
					<span class="close-button">&times;</span>
			</div>
			<% } %>
                <!-- Wrapper -->
                <div id="wrapper" class="auth-wrapper">

                    <div id="main" class="auth single-main">
                        <h3>Авторизация</h3>
                        <form method="post" action="/singin" id="signin-form" novalidate>
                            <div class="row gtr-uniform auth">
                             
                                <div class="col-8 col-12-xsmall">
                                    <input 
                                     class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>"
                                    type="email" name="email" id="email" value="<%= oldInput.email %>" placeholder="Email" required>
                                </div>
                                <div class="col-8 col-12-xsmall">
                                    <input 
                                    class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>"
                                    type="password" 
                                    name="password" 
                                    id="password" 
                                    value="<%= oldInput.password %>" 
                                    placeholder="Password"
                                        required>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                </div>

                                <div class="col-12">
                                    <ul class="actions auth">
                                        <% if(!isAuthenticated) { %>
                                    <input type="hidden" name="postId" value="<%= oldInput.postId %>">
                                            <% } %>
                                        <li><input type="submit" value="Войти"></li>
                                        <li><input type="reset" value="Reset"></li>
                                    </ul>
                                </div>

                                <p class="auth-helper">
                                    <span class="auth-signin-links"><span>Нужен аккаунт?</span> <a class="auth-link" href="/register">Зарегистрироваться</a></span>
                                    <span class="auth-signin-links"><span>Забыли пароль?</span> <a class="auth-link" href="/reset">Сбросить пароль</a></span>
                                </p>
                            </div>
                        </form>
                        <p><button id="yandex-login-btn">Войти с помощью Яндекс ID</button></p>
                    </div>

                </div>


                <!-- Footer -->
                <section id="footer" class="auth">
                    <ul class="icons">
                        <li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
                        <li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
                        <li><a href="#" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
                        <li><a href="#" class="icon solid fa-rss"><span class="label">RSS</span></a></li>
                        <li><a href="#" class="icon solid fa-envelope"><span class="label">Email</span></a></li>
                    </ul>
                    <p class="copyright">&copy; Untitled. Design: <a href="http://html5up.net">HTML5 UP</a>. Images: <a
                            href="http://unsplash.com">Unsplash</a>.</p>
                </section>



                </section>
                <!-- Scripts -->
                <script src="/assets/js/jquery.min.js"></script>
                <script src="/assets/js/browser.min.js"></script>
                <script src="/assets/js/breakpoints.min.js"></script>
                <script src="/assets/js/util.js"></script>
                <script src="/assets/js/main.js"></script>
                <script src="/assets/js/flashMessages.js"></script>
                <script src="/assets/js/oauthHandler.js"></script>

    </body>

    </html>