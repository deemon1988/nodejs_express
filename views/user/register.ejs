<%- include('../includes/head.ejs') %>
    </head>

    <body class="auth">
        <% if(errorMessage && errorMessage.length> 0) { %>
            <div class="flash-message error" style="display: block">
                <%= errorMessage %>
                    <span class="close-button">&times;</span>
            </div>
            <% } %>

                <!-- Wrapper -->
                <div id="wrapper" class="auth-wrapper">

                    <div id="main" class="auth single-main">
                        <h3>Регистрация</h3>
                        <form method="post" action="/register" id="register-form" novalidate>
                            <div class="row gtr-uniform auth">
                                <div class="col-8 col-12-xsmall">
                                    <input 
                                     class="<%= validationErrors.find(e => e.path === 'username') ? 'invalid' : '' %>"
                                    type="text" name="username" id="singin-name" value="<%= oldInput.username %>" placeholder="Name"
                                        required>
                                </div>
                                <div class="col-8 col-12-xsmall">
                                    <input 
                                     class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>"
                                    type="email" name="email" id="singin-email" value="<%= oldInput.email %>" placeholder="Email"
                                        required>
                                </div>
                                <div class="col-8 col-12-xsmall">
                                    <input 
                                     class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>"
                                    type="password" name="password" id="register-password" value="<%= oldInput.password %>"
                                        placeholder="Password" minlength="3" required>
                                </div>
                                <div class="col-8 col-12-xsmall">
                                    <input 
                                     class="<%= validationErrors.find(e => e.path === 'repeatPass') ? 'invalid' : '' %>"
                                    type="password" name="repeatPass" id="repeat-password" value="<%= oldInput.repeatPass %>"
                                        placeholder="Повторите пароль">
                                </div>

                                <div class="col-6">
                                    <ul class="actions auth">
                                        <li><input type="submit" value="Зарегистрироваться"></li>
                                        <!-- <li><input type="reset" value="Reset"></li> -->
                                    </ul>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                </div>

                                <p class="auth-helper register">
                                    Уже есть аккаунт ? <a class="auth-link" href="/singin">Войти</a>
                                </p>
                            </div>
                        </form>
                        <p><button id="yandex-login-btn">Войти с помощью Яндекс ID</button></p>

                    </div>

                </div>

<%- include('../includes/main-scripts.ejs') %>

<script src="/assets/js/flashMessages.js"></script>
<script src="/assets/js/oauthHandler.js"></script>

<%- include('../includes/scripts.ejs') %>
