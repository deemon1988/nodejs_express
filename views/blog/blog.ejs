<%- include('../includes/head.ejs') %>
	</head>

	<body class="is-preload">

		<!-- Wrapper -->
		<div id="wrapper">

			<!-- Header -->
			<!-- Menu -->
			<%- include('../includes/navigation.ejs') %>

				<!-- Main -->
				<div id="main">
					<!-- 
						<div class="flash-message success">
							<span class="close-button">&times;</span>
			
						</div>

								<div class="flash-message error">
									<span class="close-button">&times;</span>
					
								</div>
				 -->


					<!-- Post -->
					<% if (posts.length> 0) { %>
						<% for (let post of posts) { %>
							<article class="post">
								<header>
									<div class="title">
										<h2><a href="/posts/<%= post.id %>">
												<%= post.title %>
											</a></h2>
										<p>Lorem ipsum dolor amet nullam consequat etiam feugiat</p>
									</div>
									<div class="meta">
										<time class="published" datetime="<%= post.createdAt %>">
											<%= formatDateOnly(post.createdAt) %>
										</time>
										<a href="#" class="author"><span class="name">
												<%= post.category.name %>
											</span><img src="<%= post.category.image %>" alt="" /></a>
									</div>
								</header>
								<a href="/posts/<%= post.id %>" class="image featured"><img src="<%= post.image %>"
										alt="" /></a>
								<p>
									<%= post.content %>
								</p>
								<footer>
									<ul class="actions">
										<li><a href="/posts/<%= post.id %>" class="button large">Continue Reading</a>
										</li>
									</ul>
									<ul class="stats">
										<li><a href="#">
												<%= post.category.name %>
											</a></li>
										<li>
											<a href="#" class="like-icon icon solid fa-heart" <%=post.likedUsers &&
												post.likedUsers.length> 0 ? 'active' : '' %>" data-id="<%= post.id %>">
													<%= post.likes %></a>
										</li>
										<li><a href="/single/<%= post.id %>#comments" class="icon solid fa-comment">
												<%= post.commentsCount || 0 %>
											</a></li>
									</ul>
								</footer>
							</article>
							<% } %>
								<% } else { %>
									<h1>No Posts Found!</h1>
									<% } %>



										<!-- Pagination -->
										<ul class="actions pagination">
											<li><a href="" class="disabled button large previous">Previous
													Page</a></li>
											<li><a href="#" class="button large next">Next Page</a></li>
										</ul>

				</div>

				<!-- Sidebar -->
				<section id="sidebar">

					<!-- Intro -->
					<section id="intro">
						<a href="#" class="logo"><img src="images/logo.jpg" alt="" /></a>
						<header>
							<h2>Future Imperfect</h2>
							<p>Another fine responsive site template by <a href="http://html5up.net">HTML5 UP</a></p>
						</header>
					</section>

					<!-- Mini Posts -->
					<section>
						<h3>Топ 5 среди всех</h3>

						<div class="mini-posts">
							<% if (topPosts.length> 0) { %>
								<!-- <% posts.slice(0, 1) %> -->
								<% for (let post of topPosts) { %>
									<!-- Mini Post -->
									<article class="mini-post">
										<header>
											<h3><a href="single.html">
													<%= post.title %>
												</a></h3>

											<time class="published" datetime="<%= post.createdAt %>">
												<%= formatDateOnly(post.createdAt) %>
											</time>

											<a href="#" class="author"><img src="<%= post.category.image %>"
													alt="<%= post.category.name %>" /></a>

										</header>

										<a href="single.html" class="image mini"><img class="img-mini"
												src="<%= post.image %>" alt="" /></a>

									</article>
									<% } %>
										<% } else { %>
											<h1>No Posts Found!</h1>
											<% } %>

						</div>
					</section>

					<!-- Posts List -->
					<section>
						<h3>Случайные статьи из топ 5 в каждой категории с наивысшим рейтингом</h3>

						<ul class="posts">
							<% if (randomPosts.length> 0) { %>
								<% for (let post of randomPosts) { %>
									<li>
										<article>
											<header>
												<h3><a href="single.html">
														<%= post.title %>
													</a></h3>
												<!-- <time class="published" datetime="<%= post.createdAt %>">
													<%= post.categoryName %>
												</time> -->
												<!-- <a href="#" class="published"><%= post.categoryName %></a> -->
											</header>
											<a href="single.html" class="image"><img src="<%= post.categoryImage %>"
													alt="<%= post.categoryName %>" /></a>

										</article>
									</li>
									<% } %>
										<% } else { %>
											<h1>No Posts Found!</h1>
											<% } %>
						</ul>
					</section>

					<!-- About -->
					<section class="blurb">
						<h2>About</h2>
						<p>Mauris neque quam, fermentum ut nisl vitae, convallis maximus nisl. Sed mattis nunc id lorem
							euismod amet placerat. Vivamus porttitor magna enim, ac accumsan tortor cursus at phasellus
							sed ultricies.</p>
						<ul class="actions">
							<li><a href="#" class="button">Learn More</a></li>
						</ul>
					</section>

					<%- include('../includes/end.ejs') %>