<%- include('../includes/head.ejs') %>
    </head>

    <body class="posts-list">

        <!-- Wrapper -->
        <div id="wrapper">

            <!-- Header -->
            <!-- Menu -->
            <%- include('../includes/navigation.ejs') %>

                <!-- Main -->
                <div id="main">

                    <!-- Post -->
                    <% if (posts.length> 0) { %>
                        <% for (let post of posts) { %>
                            <article class="post">
                                <header>
                                    <div class="title">
                                        <h2><a href="/single/<%= post.id %>">
                                                <%= post.title %>
                                            </a></h2>
                                        <p>Lorem ipsum dolor amet nullam consequat etiam feugiat</p>
                                    </div>
                                    <div class="meta">
                                        <time class="published" datetime="<%= post.createdAt %>">
                                            <%= formatDateOnly(post.createdAt) %>
                                        </time>
                                        <a href="#" class="author"><span class="name">
                                                <%= post.category.name %>
                                            </span><img src="" alt="" /></a>
                                    </div>
                                </header>
                                <a href="/single/<%= post.id %>" class="image featured"><img src="<%= post.image %>"
                                        alt="" /></a>
                                <p>
                                    <%= post.content %>
                                </p>
                                <footer>
                                    <ul class="actions">
                                        <li><a href="/single/<%= post.id %>" class="button large">Continue Reading</a>
                                        </li>
                                    </ul>
                                    <ul class="stats">
                                        <li><a class="category" href="/category/?cat=<%= post.category.name %>"
                                                data-category="<%= post.category.name %>">
                                                <%= post.category.name %>
                                            </a></li>
                                        <li><a href="#"
                                                class="like-icon icon solid fa-heart  <%= post.likedUsers && post.likedUsers.length > 0 ? 'active' : '' %>"
                                                data-id="<%= post.id %>">
                                                <%= post.likes %>
                                            </a></li>
                                        <li><a href="/single/<%= post.id %>#comments" class="icon solid fa-comment">
                                                <%= post.commentsCount || 0 %>
                                            </a></li>
                                    </ul>
                                </footer>
                            </article>
                            <% } %>
                                <% } else { %>
                                    <h1>No Posts Found!</h1>
                                    <% } %>

                </div>
                <!-- Sidebar -->
                <section id="sidebar">

                    <!-- Intro -->
                    <section id="intro">

                        <header>
                            <a href="#" class="logo"><img src="images/logo.jpg" alt="" /></a>
                            <h2>Статьи</h2>
                            <p>Another fine responsive site template by <a href="http://html5up.net">HTML5 UP</a>
                            </p>
                        </header>
                    </section>

                    <!-- Mini Posts -->
                    <section>
                        <div class="mini-posts">

                            <% if(categories.length> 0) { %>
                                <% for(let category of categories) { %>
                                    <!-- Mini Post -->
                                    <article class="mini-post">
                                        <header>
                                            <h1>
                                                <%= category.postCount %>
                                            </h1>
                                            <h3><a href="/categories">
                                                    <%= category.name %>
                                                </a></h3>
                                            <time class="published" datetime="2015-10-20">October 20, 2015</time>
                                            <a href="#" class="author"><img src="images/avatar.jpg" alt="" /></a>
                                        </header>
                                        <a href="/single" class="image"><img src="<%= category.image %>" alt="" /></a>
                                    </article>
                                    <% } %>
                                        <% } %>

                        </div>
                    </section>

                    <!-- Posts List -->
                    <section>
                        <ul class="posts">
                            <% if (randomPosts.length> 0) { %>
                                <% for (let post of randomPosts) { %>
                                    <li>
                                        <article>
                                            <header>
                                                <h3><a href="single.html"><%= post.title %></a></h3>
                                                <time class="published" datetime="<%= post.createdAt %>"><%= formatDate(post.createdAt) %></time>
                                            </header>
                                            <a href="single.html" class="image"><img src="<%= post.category.image %>"
                                                    alt="" /></a>
                                        </article>
                                    </li>
                                    <% } %>
                                        <% } %>
                        </ul>
                    </section>

                    <!-- About -->
                    <section class="blurb">
                        <h2>About</h2>
                        <p>Mauris neque quam, fermentum ut nisl vitae, convallis maximus nisl. Sed mattis nunc id
                            lorem euismod
                            amet placerat. Vivamus porttitor magna enim, ac accumsan tortor cursus at phasellus sed
                            ultricies.
                        </p>
                        <ul class="actions">
                            <li><a href="#" class="button">Learn More</a></li>
                        </ul>
                    </section>
                    <%- include('../includes/end.ejs') %>