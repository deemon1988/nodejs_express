<!-- views/guide.ejs -->

<div class="guide-header">
  <h1><%= guide.title %></h1>
  
  <% if (guide.accessType === 'free') { %>
    <span class="badge badge-success">Бесплатно</span>
  <% } else if (guide.accessType === 'paid') { %>
    <span class="badge badge-danger">Платно <%= guide.price %> руб.</span>
  <% } else if (guide.accessType === 'subscription') { %>
    <span class="badge badge-primary">По подписке</span>
  <% } %>
</div>

<button 
  onclick="checkGuideAccess(this.dataset.guideId)" 
  data-guide-id="<%= guide.id %>" 
  class="btn btn-primary">
  Скачать PDF
</button>