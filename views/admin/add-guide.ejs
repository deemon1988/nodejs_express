<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/assets/css/create-post.css">
    <!-- <script src="https://cdn.tiny.cloud/1/<%= tinyApiKey %>/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script> -->
    </head>

    <body class="is-preload single">
        <% if(errorMessage && errorMessage.length> 0) { %>
            <div class="flash-message error" style="display: block">
                <%= errorMessage %>
                    <span class="close-button">&times;</span>
            </div>
            <% } %>
                <% if(successMessage && successMessage.length> 0) { %>
                    <div class="flash-message success" style="display: block">
                        <%= successMessage %>
                            <span class="close-button">&times;</span>
                    </div>
                    <% } %>
                        <!-- Wrapper -->
                        <div id="wrapper">
                            <%- include('../includes/navigation.ejs') %>
                                <!-- Main -->
                                <div id="main" class="single-main">
                                    <h1>
                                        <% if (editing) { %> Редактировать гайд <% } else { %> Добавить новый гайд <% } %>
                                    </h1>
                                    
                                    <form id="get-link-form" method="GET" action="">
                                    <label for="fileName">Введите имя файла на Яндекс диске:</label>
                                    <input type="text" id="fileName" name="fileName" placeholder="Введите имя файла на Яндекс диске" required>
                                    <button class="large" type="submit">Получить ссылку</button>
                                    </form>

                                    <% if (!yandexDiskAccessToken) { %>
                                    <p><button id="yandex-disk-btn" class="button fit">Авторизация Яндекс Disk API</button></p>
                                    <% } %>
                                    <div id="result"></div>

                                    <form action="/admin/<% if (editing) { %>edit-guide<% } else {  %>add-guide<% } %>"
                                        method="post" enctype="multipart/form-data" id="edit-create-guide-form">
                                        <% if (editing) { %>
                                            <input type="hidden" name="guideId" value="<%= guide.id %>">
                                            <% } %>
                                                <div>
                                                    <label for="fileUrl">Ссылка для скачивания</label>
                                                    <input
                                                        class="<%= validationErrors.find(e => e.path === 'fileUrl') ? 'invalid' : '' %>"
                                                        type="text" id="fileUrl" name="fileUrl" required
                                                        value="<% if (editing || hasError) { %><%=guide.fileUrl%><% } %>" readonly/>
                                                </div>
                                                <div class="file-features">  
                                                <div>
                                                    <label for="fileSize">Размер файла</label>
                                                    <input
                                                        class="<%= validationErrors.find(e => e.path === 'fileSize') ? 'invalid' : '' %>"
                                                        type="text" id="fileSize" name="fileSize" required
                                                        value="<% if (editing || hasError) { %><%=guide.fileSize%><% } %>" readonly/>
                                                </div>
                                                 <div>
                                                    <label for="fileType">Тип файла</label>
                                                    <input
                                                        class="<%= validationErrors.find(e => e.path === 'fileType') ? 'invalid' : '' %>"
                                                        type="text" id="fileType" name="fileType" required
                                                        value="<% if (editing || hasError) { %><%=guide.fileType%><% } %>" readonly/>
                                                </div>
                                                </div>
                                                <div>
                                                    <label for="title">Заголовок</label>
                                                    <input
                                                        class="<%= validationErrors.find(e => e.path === 'title') ? 'invalid' : '' %>"
                                                        type="text" id="title" name="title" required
                                                        value="<% if (editing || hasError) { %><%=guide.title%><% } %>" />
                                                </div> 
                                                <div>
                                                    <label for="preview">Превью</label>
                                                    <textarea id="preview"
                                                        class="<%= validationErrors.find(e => e.path === 'preview') ? 'invalid' : '' %>"
                                                        name="preview"><% if (editing || hasError) { %><%=guide.preview%><% } %></textarea>
                                                </div>
                                                 
                                                <div>
                                                    <label for="content">Содержание</label>
                                                    <textarea id="content"
                                                        class="<%= validationErrors.find(e => e.path === 'content') ? 'invalid' : '' %>"
                                                        name="content"><% if (editing || hasError) { %><%=guide.content%><% } %></textarea>
                                                </div>
                                                <div>
                                                <fieldset>
                                                <legend style="padding-bottom: 15px; font-size: 0.9em;"><strong>Доступ</strong></legend>
                                                    <ul class="access-inputs-list">
                                                    <li class="access-input-item">
                                                        <input type="radio" hidden id="free" name="accessType" value="free" checked required />
                                                        <label for="free">Бесплатно</label>
                                                    </li>
                                                    <li class="access-input-item">
                                                    <input type="radio" id="paid" name="accessType" value="paid" />
                                                        <label for="paid">Платный контент</label>
                                                    <input type="number" name="price" id="price" step="0.1" min="0" value="0.0">
                                                    </li>
                                                    <li class="access-input-item">
                                                    <input type="radio" id="subscription" name="accessType" value="subscription"  required />
                                                        <label for="subscription">По подписке</label>
                                                    </li>
                                                    </ul>
                                                </fieldset>
                                                 
                                                </div>

                                                <div>
                                                    <label for="category">Категория</label>
                                                    <select id="category" name="category"
                                                        class="<%= validationErrors.find(e => e.path === 'category') ? 'invalid' : '' %>">
                                                        <% if (editing || hasError) { %>
                                                            <option value="" selected>-- Выберите категорию --</option>
                                                            <% for (let category of categories) { %>
                                                                <option value="<%= category.id %>"
                                                                    <%= guide.categoryId === category.id ? 'selected' : '' %>
                                                                    <%= category.name %>
                                                                </option>
                                                                <% } %>

                                                                    <% } else { %>
                                                                        <option value="">-- Выберите категорию --
                                                                        </option>
                                                                        <% for (let category of categories) { %>
                                                                            <option value="<%= category.id %>">
                                                                                <%= category.name %>
                                                                            </option>
                                                                            <% } %>
                                                                                <% } %>
                                                    </select>
                                                </div>

                                                <div class="post-images-main">
                                                    <div class="post-image">
                                                        <label for="image">Изображение</label>
                                                        <div class="image-img">
                                                            <% if (editing || hasError) { %>
                                                                <img src="<%= guide.image %>" alt="<%= guide.title %>">
                                                                <% } else { %>
                                                                    <img src="" alt="">
                                                                    <% } %>
                                                        </div>
                                                        <div class="image-input">
                                                            <input type="file" id="image" name="image"
                                                                accept="image/*" />
                                                            <input type="hidden" name="imageDeleted" id="imageDeleted"
                                                                value="false">
                                                            <i class="bi bi-x-square" title="Удалить изображение"></i>
                                                        </div>
                                                    </div>

                                                    <div class="post-image">
                                                        <label for="cover">Обложка</label>
                                                        <div class="image-img">
                                                            <% if (editing || hasError) { %>
                                                                <img src="<%= guide.cover %>" alt="">
                                                                <% } else { %>
                                                                    <img src="" alt="">
                                                                    <% } %>
                                                        </div>
                                                        <div class="image-input">
                                                            <input type="file" id="cover" name="cover"
                                                                accept="image/*" />
                                                            <input type="hidden" name="coverDeleted" id="coverDeleted"
                                                                value="false">
                                                            <i class="bi bi-x-square" title="Удалить изображение"></i>
                                                        </div>

                                                    </div>
                                                </div>

                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <button type="submit" class="button large">
                                                    <% if (editing) { %> Обновить гайд <% } else { %> Опубликовать гайд
                                                            <% } %>
                                                </button>
                                    </form>
                                </div>
                        </div>

<%- include('../includes/main-scripts.ejs') %>
<script src="/assets/js/guide/guideFormHandler.js"></script>
<script src="/assets/js/yandexApi/diskApiHandler.js"></script>

<%- include('../includes/scripts.ejs') %>