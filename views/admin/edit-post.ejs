<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/assets/css/create-post.css">
    <!-- <script src="https://cdn.tiny.cloud/1/<%= tinyApiKey %>/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script> -->
    </head>

    <body class="is-preload single">
        <% if(errorMessage && errorMessage.length> 0) { %>
            <div class="flash-message error" style="display: block">
                <%= errorMessage %>
                    <span class="close-button">&times;</span>
            </div>
            <% } %>
                <% if(successMessage && successMessage.length> 0) { %>
                    <div class="flash-message success" style="display: block">
                        <%= successMessage %>
                            <span class="close-button">&times;</span>
                    </div>
                    <% } %>
                        <!-- Wrapper -->
                        <div id="wrapper">
                            <%- include('../includes/navigation.ejs') %>
                                <!-- Main -->
                                <div id="main" class="single-main">
                                    <h1>
                                        <% if (editing) { %> Редактировать пост <% } else { %> Добавить новый пост <% }
                                                    %>
                                    </h1>

                                    <form action="/admin/<% if (editing) { %>edit-post<% } else {  %>create-post<% } %>"
                                        method="post" enctype="multipart/form-data" id="edit-create-post-form">
                                        <% if (editing) { %>
                                            <input type="hidden" name="postId" value="<%= post.id %>">
                                            <% } %>
                                                <div>
                                                    <label for="title">Заголовок</label>
                                                    <input
                                                        class="<%= validationErrors.find(e => e.path === 'title') ? 'invalid' : '' %>"
                                                        type="text" id="title" name="title" required
                                                        value="<% if (editing || hasError) { %><%=post.title%><% } %>" />
                                                </div>

                                                <div>
                                                    <label for="preview">Превью</label>
                                                    <textarea id="preview"
                                                        class="<%= validationErrors.find(e => e.path === 'preview') ? 'invalid' : '' %>"
                                                        name="preview"><% if (editing || hasError) { %><%=post.preview%><% } %></textarea>
                                                </div>

                                                <div>
                                                    <label for="content">Содержание</label>
                                                    <textarea id="content"
                                                        class="<%= validationErrors.find(e => e.path === 'content') ? 'invalid' : '' %>"
                                                        name="content"><% if (editing || hasError) { %><%=post.content%><% } %></textarea>
                                                </div>

                                                <div>
                                                    <label for="category">Категория</label>
                                                    <select id="category" name="category"
                                                        class="<%= validationErrors.find(e => e.path === 'category') ? 'invalid' : '' %>">
                                                        <% if (editing || hasError) { %>
                                                            <option value="" selected>-- Выберите категорию --</option>
                                                            <% for (let category of categories) { %>
                                                                <option value="<%= category.id %>"
                                                                    <%=post.categoryId===category.id ? 'selected' : ''
                                                                    %> >
                                                                    <%= category.name %>
                                                                </option>
                                                                <% } %>

                                                                    <% } else { %>
                                                                        <option value="">-- Выберите категорию --
                                                                        </option>
                                                                        <% for (let category of categories) { %>
                                                                            <option value="<%= category.id %>">
                                                                                <%= category.name %>
                                                                            </option>
                                                                            <% } %>
                                                                                <% } %>
                                                    </select>
                                                </div>

                                                <div class="post-images-main">
                                                    <div class="post-image">
                                                        <label for="image">Изображение</label>
                                                        <div class="image-img">
                                                            <% if (editing || hasError) { %>
                                                                <img src="<%= post.image %>" alt="<%= post.title %>">
                                                                <% } else { %>
                                                                    <img src="" alt="">
                                                                    <% } %>
                                                        </div>
                                                        <div class="image-input">
                                                            <input type="file" id="image" name="image"
                                                                accept="image/*" />
                                                            <input type="hidden" name="imageDeleted" id="imageDeleted"
                                                                value="false">
                                                            <i class="bi bi-x-square" title="Удалить изображение"></i>
                                                        </div>
                                                    </div>

                                                    <div class="post-image">
                                                        <label for="cover">Обложка</label>
                                                        <div class="image-img">
                                                            <% if (editing || hasError) { %>
                                                                <img src="<%= post.cover %>" alt="">
                                                                <% } else { %>
                                                                    <img src="" alt="">
                                                                    <% } %>
                                                        </div>
                                                        <div class="image-input">
                                                            <input type="file" id="cover" name="cover"
                                                                accept="image/*" />
                                                            <input type="hidden" name="coverDeleted" id="coverDeleted"
                                                                value="false">
                                                            <i class="bi bi-x-square" title="Удалить изображение"></i>
                                                        </div>

                                                    </div>
                                                </div>

                                                <div class="post-image">
                                                    <label for="gallery">Галерея</label>
                                                    <div class="post-gallery">
                                                        <% if (editing || hasError ) { %>
                                                            <% if (post.gallery && post.gallery.length> 0) { %>
                                                                <% for(let image of post.gallery) { %>
                                                                    <div class="image-img">
                                                                        <img src="<%= image %>" alt="">
                                                                    </div>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <% } %>
                                                    </div>
                                                    <div class="image-input">
                                                        <input type="file" id="gallery" name="gallery" accept="image/*"
                                                            multiple />
                                                        <input type="hidden" name="galleryDeleted" id="galleryDeleted"
                                                            value="false">
                                                        <i class="bi bi-x-square" title="Удалить изображения"></i>
                                                    </div>
                                                </div>

                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <ul class="actions edit-post">
                                                    <li>
                                                        <button type="submit" class="button large">
                                                            <% if (editing) { %> Обновить пост <% } else { %>
                                                                    Опубликовать пост
                                                                    <% } %>
                                                        </button>
                                                    </li>
                                                    <li>
                                                        <a href="/admin/cancel-post-create"
                                                            class="button large">Отменить</a>

                                                    </li>
                                                </ul>
                                    </form>
                                </div>
                        </div>



<%- include('../includes/main-scripts.ejs') %>

<script src="/assets/js/editFormHandler.js"></script>
<script src="/assets/js/tiny-mce-init.js"></script>

<%- include('../includes/scripts.ejs') %>
