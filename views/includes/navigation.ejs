<!-- Header -->
<header id="header">
    <h1><a href="/">The Everything Journal</a></h1>
    <nav class="links">
        <ul>
            <li><a class="<%= path === '/' ? 'active' : '' %>" href="/">Главная</a></li>
            <li><a class="<%= path === '/posts' ? 'active' : '' %>" href="/posts">Посты</a></li>
            <li><a class="<%= path === '/categories' ? 'active' : '' %>" href="/categories">Категории</a></li>
            <li><a class="<%= path === '/about' ? 'active' : '' %>" href="/about">О блоге</a></li>
            <li><a class="<%= path === '/library' ? 'active' : '' %>" href="/library">Библиотека</a></li>
            <% if(isAuthenticated && userRole === 'admin' ) { %>
                <li><a class="<%= path === '/admin/create-post' ? 'active' : '' %>" href="/admin/create-post">Добавить
                        пост</a></li>
                <li><a class="<%= path === '/admin/create-category' ? 'active' : '' %>"
                        href="/admin/create-category">Добавить
                        категорию</a></li>
                <li><a class="<%= path === '/admin/add-guide' ? 'active' : '' %>"
                        href="/admin/add-guide">Добавить
                        гайд</a></li>
                <li><a class="<%= path === '/admin/posts' ? 'active' : '' %>" href="/admin/posts">Админ посты</a></li>
                <li><a class="<%= path === '/admin/messages' ? 'active' : '' %>" href="/admin/messages">Админ сообщения</a></li>
                <% } %>
        </ul>
    </nav>
   
    <nav class="main">
    <ul>
        <li class="search">
            <a class="fa-search" href="#search">Поиск</a>
            <form id="search" method="get" action="/search">
                <input type="text" name="query" placeholder="Поиск" required />
                <button type="submit" style="display: none;"></button>
            </form>
        </li>
        <li class="menu">
            <a class="fa-bars" href="#menu">Меню</a>
        </li>
    </ul>
</nav>
</header>

<!-- Menu -->
<section id="menu">
    <section>
        <form class="search" method="get" action="/search">
            <input type="text" name="query" placeholder="Поиск" required />
        </form>
    </section>


    <!-- Links -->
    <section>
        <ul class="links">
            <% if(isAuthenticated) { %>
                <li>
                    <a href="/user/profile" >
                        <h3 class="<%= path === '/user/profile' ? 'active' : '' %>">Профиль</h3>
                        <p>Настройки аккаунта и история активности</p>
                    </a>
                </li>
                <% } %>
                    <li><a href="/posts">
                            <h3 class="<%= path === '/posts' ? 'active' : '' %>">Посты</h3>
                            <p>Интересные материалы и публикации</p>
                        </a></li>
                    <li><a href="/categories">
                            <h3 class="<%= path === '/categories' ? 'active' : '' %>">Категории</h3>
                            <p>Разделы с тематическими материалами</p>
                        </a></li>
                   <li>
                        <a href="#">
                            <h3>Соцсети / Сообщество</h3>
                            <p>Ссылки на социальные сети и информация о сообществе</p>
                        </a>
                    </li>

        </ul>
    </section>
     <% if(isAuthenticated && userRole === 'admin') { %>
        <h3>Администрирование</h3>
        <section>
            <ul class="links">
                <li><a href="/admin/create-post">Добавить пост</a></li>
                <li><a href="/admin/create-category">Добавить категорию</a></li>
                <li><a href="/admin/add-guide">Добавить гайд</a></li>
                <li><a href="/admin/posts">Админ посты</a></li>
                <li><a class="<%= path === '/admin/messages' ? 'active' : '' %>" href="/admin/messages">Админ сообщения</a></li>
            </ul>
        </section>
        <% } %>
    <% if(!isAuthenticated) { %>
        <!-- Actions -->
        <section>
            <ul class="actions stacked">
                <li><a href="/singin" class="button large fit">Войти</a></li>
                <li><a href="/register" class="button large fit">Регистрация</a></li>
            </ul>
        </section>
        <% } else { %>
            <section>
                <ul class="actions stacked">
                    <li>
                        <form action="/logout" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button type="submit" class="button large fit" id="logout-btn">Выйти</button>
                        </form>
                    </li>
                </ul>
            </section>
            <% } %>
</section>